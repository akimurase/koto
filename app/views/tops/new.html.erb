<%= render "shared/header" %>

<div class="top-new-wrap">
  <div class="top-contents-row">
    <div class="top-new">
      <h3>トップ画面作成</h3>
        <%= form_with model: @top, local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>
          <div class="top-field">
            <div class="top-new-field">
              <p class="editor-title-new"><%= f.label :動画 %><span class="require">*</span></p>
              <%= f.file_field :video_top, :accept => 'video/*' %>
            </div>
            <div class="top-new-field">
              <p class="editor-title-new"><%= f.label :ロゴ %><span>（サイズ230×270推奨）</span></p>
              <%= f.file_field :image %>
            </div>
            <div class="top-new-field">
              <p class="editor-title-new"><%= f.label :タイトル %></p>
              <%= f.text_field :title, class:"top-new-field-input" %>
            </div>
            <div class="top-new-field">
              <%= f.submit "作成する", class:"top-new-submit" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer_logo" %>