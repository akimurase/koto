Topsedit

<div class="top-edit-wrap">
<!-----動画------>
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <%= video_tag @top.video_top, class:"top_video", :loop => true, :autoplay => true, :muted => true %> 
        <div class="top_hero" >
          <%= image_tag @top.image, class: "top_logo" %>
          <h3 class="top_title"><%= @top.title %></h3>
        </div>
      </div>
    </div>
  </div>
<!-----区切り------>
  <div id="app1">
    <div class="section">
      <div class="section_btn" v-on:click='ActiveBtn=!ActiveBtn'>
        <img src="/assets/section-logo.png" alt="editor_logo" >
      </div>
      <transition name="editor-side">
        <div v-show="ActiveBtn">
          <div class="container mt-5 mb-5">
            <div class="row">
              <div class="col-2">
                <img src="/assets/logo.png">
              </div>
              <div class="col-2">
                <img src="/assets/logo (1).png">
              </div>
              <div class="col-2">
                <img src="/assets/logo (5).png">
              </div>
              <div class="col-2">
                <img src="/assets/logo (2).png">
              </div>
              <div class="col-2">
                <img src="/assets/logo (3).png">
              </div>
              <div class="col-2">
                <img src="/assets/logo ().png">
              </div>
            </div>
          </div>
          <div class="container mb-5">
            <div class="row">
              <h2 class="section col-12">
              <span class="section-name mb-5 border-bottom">products</span>
              <small>プラン</small>
              </h2>
            </div>
          </div>
        </div>
      </transition>
    </div>
  </div>
<!------商品------>
  <div class="products-container container-fluid">
      <div class="row row-cols-3">
        <% @products.each do |product| %>
          <div class="products_hero col">
            <%= link_to edit_product_path(product.id) do %>
              <%= image_tag product.image, class:"products_img" if product.image.attached?  %>
              <div class="products_info">
                <p class="products_name"><%= product.name %></p>
                <p class="products_text"><%= product.title %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
</div>
<!-------ここからエディター------->
<div class="top-editor-wrap">
  <div id="app2">
    <!--メニューのボタン-->
    <div class="editor_btn" v-on:click='ActiveBtn=!ActiveBtn'>
      <img src="/assets/editor_logo.png" alt="editor_logo">
    </div>
    <!--サイドバー-->
    <transition name="editor-side">
      <div class="editor-side" v-show="ActiveBtn">
        <% if @top == nil %>
          <div class="top-new">
            <%= link_to "新規ページを作成する", new_top_path %>
          </div>
            <% else %>
          <div class="top-editor-said">
            <%#= link_to "top画面を編集する", edit_top_path(@top.id) %>
            <div class="edit-top">
              <h3>トップ画面編集</h3>
              <%= form_with model: @top, local: true do |f| %>
                <div class="top-editor-video-box">
                  <p class="editor-title"><%= f.label :動画 %></p>
                  <%= f.file_field :video_top, :accept => 'video/*' %>
                </div>
                <div class="top-editor-logo-box">
                  <p class="editor-title"><%= f.label :ロゴ %></p>
                  <%= f.file_field :image %>
                </div>
                <div class="top-editor-title-box">
                  <p class="editor-title"><%= f.label :タイトル %></p>
                  <%= f.text_field :title %>
                </div>
                <div class="top-editor-submit-box">
                  <%= f.submit "編集する", class:"top-editor-submit" %>
                </div>
              <% end %>
            </div>

            <div class="add-product">
              <h3>商品追加</h3>
              <%= form_with model: @product, local: true do |f| %>
                <div>
                  <p><%= f.label :画像 %></p>
                  <%= f.file_field :image %>
                </div>
                <div>
                  <p><%= f.label :商品名 %></p>
                  <%= f.text_field :name %>
                </div>
                <div>
                  <p><%= f.label :表題 %></p>
                  <%= f.text_field :title %>
                </div>
                <div>
                  <p><%= f.label :紹介文 %></p>
                  <%= f.text_area :text %>
                </div>
                <div>
                  <p><%= f.label :金額 %></p>
                  <%= f.text_field :price %>
                </div>
                <div>
                  <p><%= f.label :単位 %></p>
                  <%= f.text_field :unit %>
                </div>
                <%= f.submit "作成する", class:"#" %>
              <% end %>
            </div>
              <%= button_to "「@top.tilleのサイト」を削除する", top_path(@top.id), method: :delete %>
          </div>
        <% end %>
      </div>
    </transition>
  </div><%#app1%>
</div>

<%#= render "shared/footer" %>
