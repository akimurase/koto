<h1>Tops#edit</h1>

<% if @top == nil %>
  <%= link_to "新規top画面を作成する", new_top_path %>
<% else %>
  <%#= link_to "top画面を編集する", edit_top_path(@top.id) %>
  <%= form_with model: @top, local: true do |f| %>

<div class="">
  <%= f.label :video %>
  <%= f.file_field :video_top, :accept => 'video/*' %>
</div>

<div class="">
  <%= f.label :image_rogo %>
  <%= f.file_field :image %>
</div>

<div class="">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

  <div class="#">
    <%= f.submit "編集する" ,class:"#" %>
  </div>
<% end %>
  <%= button_to "動画を削除する（削除させない方がいいのでは？）", top_path(@top.id), method: :delete %>
<% end %>



<%# top %>
<div class="" >
  <div class="" >
    <%= video_tag(@top.video_top.to_s,:loop => true, :autoplay => true, :muted => true) %> 
    <div class="" >
      <div class="" >
        <%= image_tag @top.image, class: "#", :size => "260x180"%>
      </div>
      <h3><%= @top.title %></h3>
    </div>
  </div>
</div>

<%# product %>
<%= link_to "商品ページを追加する", new_product_path %>
<div class="#">
  <% @products.each do |product|  %>
    <%= link_to  edit_product_path do %>
    <%#= link_to product_path(product.id) do %>
      <%= product.name %>
      <%= image_tag product.image, class: "#", :size => "260x180" if product.image.attached?  %>
      <%= product.text %>
    <% end %>
        <%#= link_to "「〇〇」の商品の編集ページへ行く", edit_product_path(@product.id) %>
  <% end %>
</div>

<%=link_to 'もどる', root_path, class:"back-btn" %>
