<h1>Events#index</h1>

<%= render "shared/header" %>

<div class="">
  <div class="search">
      <div class="search-data">
      <h3>日付検索</h3>
      <%= search_form_for @e, url: events_search_events_path do |f| %>
        <%= f.label :product_name_eq, '商品名検索' %>
        <%= f.collection_select :product_name_eq, @event_name, :product_name, :product_name,  include_blank: '指定なし' %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
    <div class="search-name">
      <%# <h3>名前検索</h1> %>
      <%#= form_with(url: search_words_events_path, local: true, method: :get, class: "#") do |form| %>
        <%# <label>名前</label> %>
        <%#= form.text_field :keyword, placeholder: "名前で検索する", class: "#" %>
        <%#= form.submit "検索", class: "#" %>
      <%# end %>
    </div>
  </div>

  <!---カレンダー-->
  <%= month_calendar events: @events do |date, events| %>
    <%= date.day %>

  <!----イベントー---->
    <ul class="event-list">
      <% events.each do |event| %>
      <li class="list">
        <%= link_to edit_event_path(event.id) do %>
          <%= event.user_name %>
          <%= event.num.name %><span>人</span>
          <%= event.product_name %>
        <% end %>
      </li>
    </ul>
    <% end %>
  <% end %>
</div>

<%= render "shared/footer_client" %>
