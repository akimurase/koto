<h1>Itinerarys#new</h1>
<p>Find me in app/views/itinerarys/new.html.erb</p>

<%= form_with url:product_itinerarys_path, local: true do |f| %>

<div class="add">
  <%= link_to_add_association "追加ボタン", f, :itinerary,
    class: '#',id: '#',
    data: {
          association_insertion_node: '#detail-association-insertion-point',
    }
  %>
</div>


<%# 指定のid %>
<div id="detail-association-insertion-point">
    <%# 部分テンプレート %>
    <%= f.fields_for :itinerarys do |itinerary| %>
        <%= render "itinerary_fields", f: itinerary %>
    <% end %>
    <%# 部分テンプレート %>
</div>


<%= f.submit "作成する", class:"#" %>
<%= link_to "戻る", root_path, class:"#" %>
<% end %>





<h3>ツアーの流れ</h3>
<%= form_with url:product_itinerarys_path, local: true do |f| %>

  <div class="">
  <%= f.label :time %>
  <%= f.text_field :time %>
  </div>

  <div class="">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>

  <div class="">
  <%= f.label :text %>
  <%= f.text_area :text %>
  </div>

<%= f.submit "作成する", class:"#" %>
<% end %>
<%= link_to "戻る", root_path, class:"#" %>


<h3>ツアーの流れ</h3>

<div class="#">
    <% @itinerarys.each do |itinerary|  %>
    <%= itinerary.time %>
    <%= itinerary.title %>
    <%= itinerary.text %>
    <%= image_tag itinerary.image, class: "#", :size => "260x180" if itinerary.image.attached?  %>
    <br>
    <% end %>
</div>