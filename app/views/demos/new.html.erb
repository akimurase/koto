<%= render "shared/header_demo_user" %>

<div class="conf-wrap">
  <div class="conf-container container">
    <div class="conf-content">
      <div class="pay-content">
        <%= form_with model: @demo, url:demos_path, id: 'demo-charge-form', local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>
          <%= f.hidden_field :sample_name, value:current_sample.name %>
          <%= f.hidden_field :sample_kana, value:current_sample.kana %>
          <%= f.hidden_field :sample_email, value:current_sample.email %>
          <%= f.hidden_field :sample_tel, value:current_sample.tel %>
          <%= f.hidden_field :sample_product_name, value:current_sample.product_name %>
          <%= f.hidden_field :num_id, value:@demo.num.id %>
          <%= f.hidden_field :start_time, value:@demo.start_time %>
          <%= f.hidden_field :price, value:@demo.price %>
          <%# 決済機能 %>
          <div class='pay-form-box'>
            <h1>お支払い</h1>
            <div class='pay-form'>
              <div class='card-num'>
                <h4>カード番号</h4>
                <%= f.text_field :number, class:"input-expiration-number", id:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
                <%#= f.text_field :number, value:"4242424242424242", class:"input-expiration-number", id:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
              </div>
              <div class='input-expiration-date-wrap'>
                <h4>有効期限</h4>
                <div class="input-expiration-date-box">
                  <li><%= f.text_field :exp_month, class:"input-expiration-date", id:"exp_month", placeholder:"例)1" %><span class="expiration-date">月</span></li>
                  <li><%= f.text_field :exp_year, class:"input-expiration-date", id:"exp_year", placeholder:"例)24" %><span class="expiration-date">年</span></li>
                  <li><%#= f.text_field :exp_month, value:"1", class:"input-expiration-date", id:"exp_month", placeholder:"例)1" %>
                  <%# <span class="expiration-date">月</span></li> %>
                  <li><%#= f.text_field :exp_year, value:"24", class:"input-expiration-date", id:"exp_year", placeholder:"例)24" %>
                  <%# <span class="expiration-date">年</span></li> %>
                </div>
              </div>
              <div class="input-expiration-s">
                <h4>セキュリティコード</h4>
                <%#= f.text_field :cvc, value:"123", class:"input-cvc", id:"cvc", placeholder:"カード背面の番号", maxlength:"3" %>
                <%= f.text_field :cvc,  class:"input-cvc", id:"cvc", placeholder:"カード背面の番号", maxlength:"3" %>
              </div>
              <%# <p>※カード情報は予め入力しております。</p>
              <p>そのまま予約ボタンを押してください。</p> %>
              
              <div class='pay-button'>
                <p><%= f.submit "予約する", class:"pay-submit" %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="conf-title-box">
        <h1>内容の確認</h1>
        <div class="conf-title">
          <p>名前: <%= current_sample.name %>様</p>
          <p>商品名: <%= current_sample.product_name %></p>
          <p>参加人数: <%= @demo.num.name %></p>
          <p>ご希望日: <%= @demo.start_time %></p>
          <p>合計金額: ¥<span><%= @demo.price %></span></p>
        </div>
      </div>
    </div>
  </div>
  <%= render "shared/footer_demo" %>
</div>


