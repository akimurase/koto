<h1>Demos#new</h1>
<p>Find me in app/views/demos/new.html.erb</p>


<%= render "shared/header" %>

<div class="conf-wrap">
  <div class="conf-container container">
    <div class="conf-content">
      <div class="pay-content">
        <%= form_with model: @demo, url:demos_path, id: 'charge-form', local: true do |f| %>
          <%= render 'shared/error_messages', model: f.object %>
          <%= f.hidden_field :sample_name, value:current_sample.name %>
          <%= f.hidden_field :sample_kana, value:current_sample.kana %>
          <%= f.hidden_field :sample_email, value:current_sample.email %>
          <%= f.hidden_field :sample_tel, value:current_sample.tel %>
          <%= f.hidden_field :sample_product_name, value:current_sample.product_name %>
          <%= f.hidden_field :num_id, value:@demo.num.id %>
          <%= f.hidden_field :start_time, value:@demo.start_time %>
          <%= f.hidden_field :price, value:@demo.price %>
          <%#= f.hidden_field :product_name, value:@demos.product_name %>
          <%# 決済機能 %>
          <div class='pay-form-box'>
            <h1>お支払い</h1>
              
            <div class='pay-form'>
              <div class='card-num'>
                <h4>カード番号</h4>
                <%= f.text_field :number, class:"input-expiration-number", id:"number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
              </div>
              <div class='input-expiration-date-wrap'>
                <h4>有効期限</h4>
                <div class="input-expiration-date-box">
                  <p><span class="expiration-date">月</span><%= f.text_field :exp_month, class:"input-expiration-date", id:"exp_month", placeholder:"例)1" %></p>
                  <p><span class="expiration-date">年</span><%= f.text_field :exp_year, class:"input-expiration-date", id:"exp_year", placeholder:"例)24" %></p>
                  <p><span>セキュリティコード</span><%= f.text_field :cvc, class:"input-cvc", id:"cvc", placeholder:"カード背面の番号", maxlength:"3" %></p>
                </div>
              </div>
              <div class='pay-button'>
                <p><%= f.submit "予約する", class:"pay-submit" %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="conf-title-box">
        <h1>内容の確認</h1>
        <div class="conf-title">
          <p>名前: <%= current_sample.name %>様</p>
          <p>商品名: <%= current_sample.product_name %></p>
          <p>参加人数: <%= @demo.num.name %></p>
          <p>ご希望日: <%= @demo.start_time %></p>
          <p>合計金額: ¥<span><%= @demo.price %></span></p>
        </div>
      </div>
    </div>
  </div>

  <!------フッター------>
  <div class="footer">
    <div class="footer-demo">
      <div class="client-admin-if-login-box">
        <div class="company-info">
          <ul>
            <li>会社名<span>:</span>◯◯◯◯株式会社</li>
            <li>所在<span>:△△△県□□□市</span></li>
            <li>メール<span>:xxxx@kototabi.com</span></li>
            <li>TEL<span>:</span>0120-123-1234</li>
          </ul>
        </div>
      </div>
      <div class="client-menu">
        <ul>
          <li>
            <p>Admin</p>
          </li>
          <li>
            <%= link_to "予約管理", events_path, class:"client-menu-li" %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_sample_session_path, method: :delete, class:"client-menu-li" %>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer-logo-box">
      <img src="/assets/sample_logo.png" alt="サンプルロゴ.png" class="footer-logo">
    </div>
  </div><!--footer-->
</div>


