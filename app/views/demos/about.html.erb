      <div class="header-introduction-1">
        <ul>
          <li><%= link_to "無料デモを使う", samples_guest_sign_in_path, method: :post %></li>
          <li><%= link_to 'デモを編集する', clients_guest_sign_in_path, method: :post %></li>
