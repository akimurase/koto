<%= render "shared/header" %>

<div class="background_client" > 
  <div class="container text-dark">
    <div class="devise_main">
      <h2 class="m-3">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <p class="devise_title"><%= f.label :メール %></p>
          <ul class="login_ul">
            <li class="m-3 "><p class="text-danger">必須</p></li>
            <li class="m-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"devise_form", placeholder:"例)xxxxxx@koto.com" %></li>
          </ul>
        </div>
        <div class="field">
          <p class="devise_title"><%= f.label :パスワード（6文字以上） %></p>
          <ul class="login_ul">
            <li class="m-3 "><p class="text-danger">必須</p></li>
            <li class="m-3"><%= f.password_field :password, autocomplete: "current-password", class:"devise_form" %></li>
          </ul>
        </div>
        <div class="actions">
          <%= f.submit "👉  ログイン >", class:"actions-btn btn-danger p-2 shadow rounded", placeholder:"例）kototabi@koto.com"%>
        </div>
          <p>パスワードをお忘れの方
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "こちら", new_password_path(resource_name) %><br />
          <% end %>
          </p>
      <% end %>
      <hr class="m-4" width="95%" >
      <p>アカウントがない方</p>
      <p>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規登録（無料）", new_registration_path(resource_name), class:"btn btn-light w-50 p-2 border" %><br />
      <% end %>
      </p>
    </div>
  </div>
</div>

<div class="footer-logo-box">
  <img src="/assets/footer-logo.png" alt="footer-logo.png" class="footer-logo">
</div>
